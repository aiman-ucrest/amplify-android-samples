<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amplifyframework.samples.gettingstarted">

    <application
        android:name="com.amplifyframework.samples.gettingstarted.TodoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Todo">
        <activity android:name="com.amplifyframework.samples.gettingstarted.TodoListActivity"
            android:exported="false"/>
        <activity android:name="com.amplifyframework.MainActivity"
            android:exported="false"/>
        <activity android:name="com.amplifyframework.SignUpActivity"
            android:exported="false"/>
        <activity android:name="com.amplifyframework.SignUpConfirmationActivity"
            android:exported="false"/>
        <activity android:name="com.amplifyframework.ForgotPasswordActivity"
            android:exported="false"/>
        <activity android:name="com.amplifyframework.ResetPasswordActivity"
            android:exported="false"/>
        <activity android:name="com.amplifyframework.SignInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>